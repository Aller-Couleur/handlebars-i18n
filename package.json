{
  "name": "handlebars-i18n",
  "version": "1.10.1",
  "description": "handlebars-i18n adds internationalization to handlebars.js using i18next and Intl.",
  "main": "dist/handlebars-i18n.js",
  "scripts": {
    "test": "NODE_ENV=TEST c8 mocha",
    "test:coverage": "npm run test && NODE_ENV=TEST c8 report --reporter=text-lcov > coverage/lcov.info",
    "compress": "gulp compress",
    "example:js": "cd examples/node-example && node simple-example.js",
    "example:ts": "cd examples/typescript && tsc && node index.js"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aller-couleur/handlebars-i18n.git"
  },
  "keywords": [
    "Translation",
    "Multi-language",
    "Internationalization",
    "Localization",
    "Globalization",
    "Date Formatting",
    "Relative Dates",
    "Currency Formatting",
    "Number Formatting",
    "Handlebars",
    "i18next",
    "i18n",
    "Intl",
    "Helper",
    "Typescript",
    "handlebars-i18next"
  ],
  "author": "Florian Walzel",
  "license": "MIT",
  "homepage": "https://github.com/aller-couleur/handlebars-i18n.git#readme",
  "peerDependencies": {
    "intl": "^1.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@types/intl": "^1.2.2",
    "@types/node": "^24.10.1",
    "c8": "^10.1.3",
    "chai": "6.2.1",
    "coveralls-next": "^6.0.1",
    "glob": "^13.0.0",
    "gulp": "5.0.1",
    "gulp-rename": "2.1.0",
    "gulp-uglify": "3.0.2",
    "gulp-uglify-es": "3.0.0",
    "html-entities": "^2.6.0",
    "mocha": "11.7.5",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "17.1.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "i18next": "^25.7.1",
    "intl": "^1.2.5",
    "relative-time-format": "^1.1.11"
  },
  "scheduleVersion": "1.4.2"
}
